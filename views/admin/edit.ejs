<!DOCTYPE html>
<html lang="en">

<head>
    <% include ./partials/head %>
    <title>add new post</title>
</head>

<body>

    <div id="wrapper">
        <% include ./partials/body %>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Add new post</h1>
                    </div>
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <form action="/admin/add"  method="POST" enctype="multipart/form-data" role="form">
                                    <div class="form-group">
                                        <label>Post title</label>
                                        <input type="text" value="<%= post.title %>" class="form-control" name="title" id="" placeholder="Input field">
                                    </div>
                                    <div class="form-group">
                                        <label>Descriptions</label>
                                        <input type="text" value="<%= post.descriptions %>" class="form-control" name="descriptions" id="" placeholder="Input field">
                                    </div>
                                    <div class="form-group">
                                        <label for="">Content</label>
                                        <textarea name="content"  class="ckeditor" type="html"><%- post.content %></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>upload image</label>
                                        <input type="text" class="form-control" value="<%= post.imageUrl%>" readonly>
                                        <input type="file" class="form-control" value=".txt" name="image">
                                    </div>
                                    <button type="submit" class="btn btn-outline btn-primary btn-lg btn-block">Post</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <% include ./partials/script %>
</body>

</html>
